[build-system]
requires = [
  "setuptools >= 80",
  "setuptools_scm[toml] >= 8",
]
build-backend = 'setuptools.build_meta'

[project]
name="{{ project_name }}"
dynamic = ["version"]
description = "{{ package_short_description }}"
readme = "README.md"
authors = [
  {name = "{{ author_first_name }} {{ author_family_name }}", email = "{{ email }}"},
]
maintainers = [
  {name = "{{ author_first_name }} {{ author_family_name }}", email = "{{ email }}"},
]
license = "{{ project_license }}"
keywords = ["NREL", "{{ project_name }}"]
requires-python = ">= {{ requires_python }}"
classifiers=[
  "Development Status :: 2 - Pre-Alpha",
  "Intended Audience :: Science/Research",
  "Natural Language :: English",
  "Operating System :: OS Independent",
  "Programming Language :: Python :: 3",
  {% if requires_python <= "3.11" %}"Programming Language :: Python :: 3.11",
  {% endif %}
  "Programming Language :: Python :: 3.12",
  "Programming Language :: Python :: 3.13",
  "Topic :: Software Development :: Libraries :: Application Frameworks",
]
dependencies = [
  {% if command_line_interface == "Click" %}"click>=8.0.0",
  {% elif command_line_interface == "Typer" %}"typer>=0.12",
  {% endif %}
]

[project.optional-dependencies]
dev = [
  "ipython>=8.29.0,<9",
  {% if use_pre_commit %}"pre-commit>=4.0.1,<5",{% endif %}
  "jupyter>=1.1.1,<2",
]
doc = [
  "ghp-import>=2.1.0,<3",
  "nbconvert>=7.16.6,<8",
  "numpydoc>=1.6",
  "pandoc>=2.3",
  "pydata-sphinx-theme>=0.16.1,<0.17",
  "sphinx>=7.2",
  "sphinx-click>=6.1.0,<7",
  "sphinx-copybutton>=0.5.2,<0.6",
  "sphinx-tabs>=3.4.1,<4",
  "sphinxcontrib-mermaid>=1.0.0,<2",
]
test = [
  "flaky>=3.8.1,<4",
  "pytest>=9.0.1,<10",
  "pytest-cases>=3.9.1,<4",
  "pytest-cov>=7.0.0,<8",
  "pytest-mock>=3.15.1,<4",
  "pytest-profiling>=1.8.1,<2",
  "pytest-xdist>=3.8.0,<4",
  "snakeviz>=2.2.2,<3",
  "tox>=4.32.0,<5",
]

[project.urls]
homepage = "{{ repository }}"
documentation = "{{ repository }}"
repository = "{{ repository }}"

[tool.coverage.report]
# Regexes for lines to exclude from consideration
exclude_also = [
  # Have to re-enable the standard pragma
  "pragma: no cover",

  # Don't complain about missing debug-only code:
  "if self\\.debug",

  # Don't complain about repr methods
  "def __repr__",
  "def _repr_markdown_",

  # Don't complain about data I/O code
  "def load*",
  "def _load*",

  # Don't complain if tests don't hit defensive assertion code:
  "raise AssertionError",
  "raise NotImplementedError",

  # Don't complain if non-runnable code isn't run:
  "if __name__ == .__main__.:",

  # Don't complain about abstract methods, they aren't run:
  "@(abc\\.)?abstractmethod",

  # Don't complain about logging debugging functions
  "def print_logging_info*",
  "def __cls_name",
]

omit = [
    # omit test files
    "tests/*",
    # omit init files
    "__init__.py",
    # omit version file
    "_version.py",
    # omit pixi files
    ".pixi/*",
]

[tool.pytest.ini_options]
addopts = "--disable-warnings"
testpaths = [
  "tests/unit",
  "tests/integration",
]

[tool.ruff]
line-length = 79

[tool.ruff.format]
quote-style = "double"
indent-style = "space"

[tool.ruff.lint]
preview = true
select = [
  "A", # flake8-builtins
  "ARG", # flake8-unused-arguments
  "B", # flake8-bugbear
  "BLE", # flake8-blind-except
  "C", # Pylint: Convention
  "C4", # flake8-comprehensions
  "C90", # mccabe
  "COM", # flake8-commas
  "D", # pydocstyle
  "E", # pydoctstyle, Error
  "EM", # flake8-errmsg
  "F", # Pyflakes
  "FURB", # refurb
  "FLY", #  flynt
  "G", # flake8-logging-format
  "I", # isort
  "INP", # flake8-no-pep420
  "ISC", # flake8-implicit-str-concat
  "LOG", # flake8-logging
  "N", # pep8-naming
  "NPY", # numpy-specific
  "PD", # pandas-vet
  "PERF", # Perflint
  "PIE", # flake8-pie
  "PL", # Pylint
  "PTH", # flake8-use-pathlib
  "PYI", # flake8-pyi
  "Q", # flake8-quotes
  "RET", # flake8-return
  "RSE", # flake8-raise
  "RUF", # Ruff-specific rules
  "S", # flake8-bandit
  "SLF", # flake8-self
  "SIM", # flake8-simplify
  "TID", # flake8-tidy-imports (absolute imports)
  "TRY", # tryceratops
  "UP", # pyupgrade
  "W" # Warning
]
ignore = [
  "D400", # first-line-should-end-with-a-period
  "COM812" # missing-trailing-comma (incompatible with formatter)
]

[tool.ruff.lint.pydocstyle]
convention = "numpy"

[tool.ruff.lint.per-file-ignores]
"__init__.py" = ["F401"]

[tool.ruff.lint.pylint]
max-args = 10
max-positional-args = 10

[tool.setuptools]
packages = ["{{ project_slug }}"]

[tool.setuptools_scm]
fallback_version = "9999"
# Default git command uses "*[0-9]*", which breaks with cX.X.X tags.
# This spec below forces setuptools_scm to look strictly for vX.X.X tags
git_describe_command = [ "git", "describe", "--dirty", "--tags", "--long", "--match", "v*[0-9]*" ]
version_file = "{{ project_slug }}/_version.py"

[tool.pixi.project]
channels = ["conda-forge"]
platforms = ["osx-arm64", "linux-64", "linux-aarch64", "win-64"]

[tool.pixi.pypi-dependencies]
{{ project_slug }} = { path = ".", editable = true }

[tool.pixi.environments]
default = { solve-group = "default" }
dev = { features = ["dev", "doc", "test"], solve-group = "default" }
doc = { features = ["doc"], solve-group = "default" }
test = { features = ["test"], solve-group = "default" }
build = { features = ["build"], solve-group = "default" }

[tool.pixi.feature.dev.tasks]
tests = "pytest --durations=20 -rapP -vv --cov={{ project_slug }} --cov-report=html --cov-branch --cov-report=xml:coverage.xml --cov-fail-under=80 tests/"
tests-u = "pytest --durations=20 -rapP -vv --cov={{ project_slug }} --cov-report=html --cov-branch --cov-report=xml:coverage.xml --cov-fail-under=80 tests/unit"
tests-i = "pytest --durations=20 -rapP -vv --cov={{ project_slug }} --cov-report=html --cov-branch --cov-report=xml:coverage.xml tests/integration"

[tool.pixi.feature.doc.tasks]
python-docs = { cmd = "make html", cwd = "docs", env = { SPHINXOPTS = "--fail-on-warning --keep-going --nitpicky" }}

[tool.pixi.feature.build.tasks]
build-wheels = { cmd = "uv build --sdist --wheel --out-dir dist/ ." }
check-wheels = { cmd = ["twine", "check", "dist/*"], depends-on = ["build-wheels"] }
upload-wheels = { cmd = ["twine", "upload", "dist/*"], depends-on = ["check-wheels"] }

[tool.pixi.dependencies]

[tool.pixi.feature.dev.dependencies]
ipython = ">=8.29.0,<9"
{% if use_pre_commit %}pre-commit = ">=4.0.1,<5"{% endif %}
jupyter = ">=1.1.1,<2"
ruff = ">=0.14.5,<0.15"

[tool.pixi.feature.test.dependencies]
flaky = ">=3.8.1,<4"
pytest = ">=9.0.1,<10"
pytest-cases = ">=3.9.1,<4"
pytest-cov = ">=7.0.0,<8"
pytest-mock = ">=3.15.1,<4"
pytest-profiling = ">=1.8.1,<2"
pytest-xdist = ">=3.8.0,<4"
snakeviz = ">=2.2.2,<3"
tox = ">=4.32.0,<5"

[tool.pixi.feature.doc.dependencies]
ghp-import = ">=2.1.0,<3"
make = ">=4.4.1,<5"
myst-parser = ">=4.0.0,<5"
nbconvert = ">=7.16.6,<8"
pandoc = ">=3.6.4,<4"
pydata-sphinx-theme = ">=0.16.1,<0.17"
sphinx = ">=7.2"
sphinx-click = ">=6.1.0,<7"
sphinx-copybutton = ">=0.5.2,<0.6"
sphinx-tabs = ">=3.4.1,<4"
# sphinx-inline-tabs = ">=2023.4.21,<2024"
sphinxcontrib-mermaid = ">=1.0.0,<2"

[tool.pixi.feature.build.dependencies]
python-build = ">=1.3.0,<2"
pkginfo = ">=1.12.1.2,<2"
twine = ">=6.2.0,<7"
uv = ">=0.9.10,<0.10"
