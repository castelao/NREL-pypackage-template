name: Python checks
permissions:
  contents: read

on:
  push:
    branches: [main]
  pull_request:
  schedule:
    - cron: '0 7 * * 1'
  workflow_dispatch:

jobs:
  lint:
    name: Lint Python Code Base with Ruff
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v5
      - uses: astral-sh/ruff-action@v3
        with:
          version: "latest"
          args: "check"
          src: "./{{ project_slug }}"
      - uses: astral-sh/ruff-action@v3
        with:
          version: "latest"
          args: "format --check"
          src: "./{{ project_slug }}"

  locked-tests:
    needs: lint
    name: Pixi-Locked Test
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      max-parallel: 8

    steps:
    - name: Checkout Repo
      uses: actions/checkout@v5
      with:
        fetch-depth: 0
        fetch-tags: true

    - uses: prefix-dev/setup-pixi@v0.9.3
      with:
        pixi-version: v0.59.0
        locked: true
        cache: true
        cache-write: false
        environments: dev

    - run: |
        pixi reinstall -e dev --locked {{ project_slug }}

  unit-tests:
    needs: lint
    name: Python Unit Tests (Pixi)
    runs-on: {% raw %}${{ matrix.os }}{% endraw %}
    strategy:
      fail-fast: false
      max-parallel: 8
      matrix:
        os: [ubuntu-latest, macos-latest, windows-latest]

    steps:
    - name: Checkout Repo
      uses: actions/checkout@v5
      with:
        fetch-depth: 0
        fetch-tags: true

    - uses: prefix-dev/setup-pixi@v0.9.3
      with:
        pixi-version: v0.59.0
        locked: true
        cache: true
        cache-write: {% raw %}${{ github.ref == 'refs/heads/main' }}{% endraw %}
        environments: dev

    - run: |
        pixi reinstall -e dev {{ project_slug }}
        pixi run -e dev tests-u

  integration-tests:
    needs: lint
    name: Python Integration Tests (Pixi)
    runs-on: {% raw %}${{ matrix.os }}{% endraw %}
    strategy:
      fail-fast: false
      max-parallel: 8
      matrix:
        os: [ubuntu-latest, macos-latest, windows-latest]

    steps:
    - name: Checkout Repo
      uses: actions/checkout@v5
      with:
        fetch-depth: 0
        fetch-tags: true

    - uses: prefix-dev/setup-pixi@v0.9.3
      with:
        pixi-version: v0.59.0
        locked: true
        cache: true
        cache-write: false
        environments: dev

    - run: |
        pixi reinstall -e dev {{ project_slug }}
        pixi run -e dev tests-i

  tox-tests:
    needs: lint
    name: Python tests (Tox)
    runs-on: {% raw %}${{ matrix.os }}{% endraw %}
    strategy:
      fail-fast: false
      max-parallel: 8
      matrix:
        os: [ubuntu-latest, macos-latest, windows-latest]
        python-version: ['{{ requires_python }}']

    steps:
    - uses: actions/checkout@v5
      with:
        fetch-depth: 0
        fetch-tags: true

    - name: Set up Python {% raw %}${{ matrix.python-version }}{% endraw %}
      uses: actions/setup-python@v5
      with:
        python-version: {% raw %}${{ matrix.python-version }}{% endraw %}
        cache: 'pip'

    - name: Install Dependencies
      run: |
        python -m pip install --upgrade pip
        python -m pip install tox tox-gh-actions>=2.0

    - name: Load tox cache
      uses: actions/cache/restore@v4
      with:
        path: .tox/
        key: {% raw %}${{ runner.os }}-${{ matrix.python-version }}-tox-v1-${{ hashFiles('**/pyproject.toml') }}{% endraw %}
        restore-keys: |
          {% raw %}${{ runner.os }}-${{ matrix.python-version }}-tox-v1-{% endraw %}

    - name: Test with tox
      run: tox -e {% raw %}${{{% endraw %} matrix.python-version == '{{ requires_python }}' && 'msv' || 'latest' {% raw %}}}{% endraw %}
      env:
        PYTHONDEVMODE: 1

    - name: Save tox cache (only on main)
      if: github.ref == 'refs/heads/main'
      uses: actions/cache/save@v4
      with:
        path: .tox/
        key: {% raw %}${{ runner.os }}-${{ matrix.python-version }}-tox-v1-${{ hashFiles('**/pyproject.toml') }}{% endraw %}
