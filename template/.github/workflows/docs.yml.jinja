name: Python Documentation

permissions: write-all

on:
  release:
    types: [created, published]

jobs:
  build_docs:
    name: Build docs
    runs-on: ubuntu-latest
    if: startsWith(github.ref, 'refs/tags/v')

    steps:
      # Install Latex if building PDF docs
      # - name: Install LaTeX
      #   run: "sudo apt-get install -y latexmk texlive-latex-recommended texlive-latex-extra texlive-fonts-recommended texlive-xetex"

      - name: Checkout code
        uses: actions/checkout@v5
        with:
          fetch-depth: 0
          fetch-tags: true

      - name: Set Pixi to manage environments
        uses: prefix-dev/setup-pixi@v0.9.1
        with:
          pixi-version: v0.50.1
          cache: true
          cache-write: ${{ github.ref == 'refs/heads/main' }}
          frozen: true
          environments: docs

      - name: Build HTML
        # Turn warning into errors
        run: SPHINXOPTS="-W --keep-going -n" pixi run -e docs python-docs

